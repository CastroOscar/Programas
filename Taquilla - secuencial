#include<iostream>
#include<conio.h>
#define c 5000
#define p 1000
#define t 5
int main(){

    int opc,bol,suelto,tira,tira2,paq,paq2,caja,
        impt,dep,err,q,d,cn,cta,v,dz,cco,ds,un,
        recb,dotb,trab,venb,recg,rect,dott,trat,vent,
        a[10],i,n,suma;


    printf("\t  PROCEDIMIENTOS DE TAQUILLA\n");
    printf("\t| 1 - Deposito/Corte.         |\n");
    printf("\t| 2 - Importe Total del turno |\n");
    printf("\t| 3 - Cotejo de boletos       |\n");

    printf("\nDigita la opcion: ");
    scanf("%d",&opc);

    switch (opc)
    {
    case 1:

        printf("\n\tDEPOSITO/CORTE\n");
        printf("\nTotal del Deposito: $");
        scanf("%d",&dep);
        printf("\nIngresa los montos de la venta\n");

        printf("\n\tBILLETES\n");
        printf("$500: ");
        scanf("%d",&q);
       
        printf("$200: ");
        scanf("%d",&d);
        printf("$100: ");
        scanf("%d",&cn);
        printf("$50: ");
        scanf("%d",&cta);
        printf("$20: ");
        scanf("%d",&v);

        printf("\tMONEDAS");

        printf("\n$10: ");
        scanf("%d",&dz);
        printf("$5: ");
        scanf("%d",&cco);
        printf("$2: ");
        scanf("%d",&ds);
        printf("$1: ");
        scanf("%d",&un);

        impt=q*500+d*200+cn*100+cta*50+v*20+dz*10+cco*t+ds*2+un;

        printf("\nImporte total de venta: $%d",impt);

        err=impt-dep;

        if(dep==impt)
            printf("\nEstÃ¡ correcto");
        else if(dep<impt)

            printf("\nÂ¡Tienes un sobrante! de: $%d\n",err);
        else if(dep>impt)

            printf("\nÂ¡Tienes un faltante! de: $%d\n",err);
        break;

    case 2:
        printf("\n\tIMPORTE TOTAL DEL TURNO\n");


        printf("\n\tBOLETOS\n");
        printf("Recibido: ");
        scanf("%d",&recb);
        printf("Dotacion: ");
        scanf("%d",&dotb);
        printf("Traspaso: ");
        scanf("%d",&trab);

        venb=recb+dotb-trab;
        printf("Venta: %d\n",venb);

        printf("\n\tTARJETAS\n");
        printf("Recarga: $");
        scanf("%d",&recg);
        printf("Recibido: ");
        scanf("%d",&rect);
        printf("Dotacion: ");
        scanf("%d",&dott);
        printf("Traspaso: ");
        scanf("%d",&trat);

        vent=rect+dott-trat;
        printf("Venta: %d\n",vent);

        impt=venb*t+recg+vent*15;
        printf("\n\tIMPORTE TOTAL DEL TURNO: $%d\n",impt);

        printf("\nIngresa el numero de depositos: ");
        scanf("%d",&n);
        printf("\n");
        for(i=1; i<=n; i++)
        {
            printf("DepÃ³sito %d:$",i);
            scanf("%d",&a[i]);
        }
        suma=0;
        {   for(i=1; i<=n; i++)
                suma+= a[i];
            printf("\n\tTOTAL IMPORTE DE DEPOSITOS : $%d",suma);
        }
        err=suma-impt;
        if(impt==suma)
            printf("\nEsta correcto\n");
        else if(suma>impt)

            printf("\nÂ¡Tienes un sobrante! de: $%d\n",err);
        else if(suma<impt)

            printf("\nÂ¡Tienes un faltante! de: $%d\n",err);
        break;

    case 3:
        printf("\n\t   COTEJO DE BOLETOS\n");
        printf("\t| 1 - Desglose.        |\n");
        printf("\t| 2 - Total de boletos |\n");
        printf("\nDigita la Opcion: ");
        scanf("%d",&opc);
        if(opc ==1) {
            printf("\nDESGLOSE\n");
            printf("\nIngresa la cantidad de boletos: ");
            scanf("%d",&bol);
            caja=bol/c;
            printf("\nCajas: %d",caja);
            paq= bol-caja*c;
            paq2=paq/p;
            printf("\nPaquetes: %d",paq2);
            tira=paq-paq2*p;
            tira2=tira/t;
            printf("\nNo. de Tira: %d",tira2);
            suelto=tira-tira2*t;
            printf("\nBoletos sueltos: %d\n",suelto);
 }else{
            printf("\n\tTOTAL DE BOLETOS\n");
            printf("\nIngresa los datos\n");
            printf("\nCajas: ");
            scanf("%d",&caja);
            printf("Paquetes: ");
            scanf("%d",&paq);
            printf("No. de tira: ");
            scanf("%d",&tira);
            printf("Boletos sueltos: ");
            scanf("%d",&suelto);
            bol=caja*c+paq*p+tira*t+suelto;
            printf("Total de boletos: %d\n",bol);
            }
        }
    return 0;
    } 
