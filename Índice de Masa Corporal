Castro Avila Oscar Daniel 
Calcular el IMC
---------------------------*/

#include<stdio.h>
#include<math.h>
#define a 17.0
#define b 18.5
#define c 25.0
#define d 30.0

void opcion(void);

int main() {
	
float peso,est,imc;
int op;

    printf("\tCALCULO APROXIMADO DEL INDICE DE MASA CORPORAL EN ADULTOS\n");
   do{
   
    printf ( "\nIngresa tu peso en kilogramos: ");
    scanf("%f",&peso);

    printf("Ingresa tu estatura en metros: ");
    scanf("%f",&est);
    
    imc = peso/pow(est,2);
    
    printf("\nTu IMC es: %.1f\n",imc);
    
    if (imc<=a)
    printf("Tienes desnutricion\n");
    else
      if(imc>a,imc<b)
    printf("Tiene peso bajo\n");
    else
       if(imc>=b,imc<c)
    printf("Tiene peso normal\n");
    else
       if(imc>=c,imc<d)
    printf("Tiene sobrepeso\n");
    else
       if(imc>=d)
    printf("Tiene obesidad\n");
    opcion();
    printf("\nDigita la Opcion: ");scanf("%i",&op);
   }
    while(op == 1);
    return  0;
}
void opcion(void){
	printf("\n\t   OPCIONES\n"
           "\t| 1. REPETIR |\n"
           "\t| 2. SALIR   |\n");
}
